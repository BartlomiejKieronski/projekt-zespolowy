<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">
    
        
    <StackLayout BackgroundColor="white">
            <Label Text=" Zaloguj się!" FontSize="24" HorizontalTextAlignment="Center" TextColor="Black"/>
            <Entry x:Name="Login" Placeholder="Login"/>
        <Entry x:Name="Haslo" Placeholder="Hasło"/>
        <Button x:Name="Zaloguj" Text="Zaloguj" BorderRadius="6" Clicked="Zaloguj_Clicked" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Blue" TextColor="White"/>
        <Button x:Name="LinkRejestracja" Clicked="DoRejerstracjiClicked" Text="Nie masz konta? Zarejetruj się!" BackgroundColor="White" HorizontalOptions="Center"/>
        <Label x:Name="label1" />
        <Label x:Name="label2" />
    </StackLayout>
    
</ContentPage>
